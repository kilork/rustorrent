    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rustorrent'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rustorrent"
                ],
                "filter": {
                    "name": "rustorrent",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustorrent'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustorrent",
                    "--package=rustorrent"
                ],
                "filter": {
                    "name": "rustorrent",
                    "kind": "bin"
                }
            },
            "args": ["-vvv", "${workspaceFolder}/rustorrent/tests/ferris.gif.torrent"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rustorrent'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rustorrent",
                    "--package=rustorrent"
                ],
                "filter": {
                    "name": "rustorrent",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'samples_parse'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=samples_parse",
                    "--package=rustorrent"
                ],
                "filter": {
                    "name": "samples_parse",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}